pkgname="terraos-desktop"
pkgver="0.2.0"
pkgrel=4
pkgdesc="Stellar Project Terra OS Desktop"
url="https://github.com/stellarproject"
arch="noarch"
license="MIT"
depends="sway swaylock swayidle papirus-icon-theme alsa-utils alsa-lib alsaconf pulseaudio pulseaudio-alsa alsa-plugins-pulse pulseaudio-utils ttf-cantarell ttf-hack networkmanager coreutils dbus udev acpi bluez lxterminal alacritty firefox sudo xf86-input-libinput less xorg-server-xwayland dmenu mesa-dri-swrast mesa-dri-intel mesa-dri-virtio"
makedepends=""
install="$pkgname.post-install"
options="!check !archcheck !strip"

prepare() {
    default_prepare
}

build() {
    return 0
}

package() {
    mkdir -p "$pkgdir"
    mkdir -p "$pkgdir/etc/security/limits.d"
    echo "@audio - nice -11" > "$pkgdir/etc/security/limits.d/audio.conf"
}
